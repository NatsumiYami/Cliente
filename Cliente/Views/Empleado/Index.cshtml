@model IEnumerable<Cliente.Models.Empleado>

@{

    ViewBag.Title = "Ingreso empleados";

}



<h2 class="text-center">Listado de empleados</h2>


<body style="background-color:#D1F4F4;">
    <p>
        <!-- Links  @Html.ActionLink("Crear nuevo", "Create")  -->


    </p>
    <form>
        <a href="http://localhost:55993/Empleado/Create">
            <input type="button" value="Crear nuevo registro" class="btn btn-secondary">
        </a>
    </form>

<form action="@Url.Action("Exportar","Empleado")" method="get">
        <div class="col-sm-3">
            <button class="btn btn-success btn-block" type="submit">Descargar</button>
        </div>
    </form>




  

    <table class="table table-hover">
        <tr class="table-dark">
            <th>
                <!-- Links     @Html.DisplayNameFor(model => model.Id_empleado)-->
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_nacimiento)
            </th>
            <th>
                <!-- Links    @Html.DisplayNameFor(model => model.banActivo)-->


            </th>
            <th></th>

        </tr>





        @foreach (var item in Model)
        {
            <tr class="table-light">
                @if (item.banActivo)
                {

                    <td>

                        <!-- Links      @Html.DisplayFor(modelItem => item.Id_empleado) -->
                        @Html.Hidden("Id_empleado", new { Value = item.Id_empleado })

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_nacimiento)
                    </td>
                    <td>

                        <!-- Links    @Html.DisplayFor(modelItem => item.banActivo) -->
                        @Html.Hidden("banActivo", new { Value = item.banActivo })
                    </td>
                    <td>



                        @Html.ActionLink("Eliminar", "Ingreso", new { id = item.Id_empleado })  |
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id_empleado }) |





                    </td>

                }
            </tr>

        }



    </table>

</body>

